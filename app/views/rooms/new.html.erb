<%= simple_form_for @room do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :room_number %>
  <%# TODO: move the class method invocation to the controller %>
   <%= f.input :calendar_id, collection: @room.google_calendar_map, include_blank: 'Select...',required: true, label: "Calendar" %>

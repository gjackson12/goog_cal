<%= simple_form_for(@reservation) do |f| %>
  <%= f.input :summary, label: "Event Title" %>
  <%= f.datetime_select :start_at, label: "Start time", class: { "time-select"} %>
  <%= f.datetime_select :end_at, ampm: true, label: "End time", class: { "time-select"} %>
  <%= f.input :description %>
  <%= f.association :room, :label_method => :complete_name, value_method: :id, prompt: "Choose a Room" %>

  <%= f.submit "Create this Event!" %>

<% end %>
